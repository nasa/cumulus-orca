{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/nasa/cumulus-orca/blob/master/tasks/copy_to_glacier/schemas/output.json",
  "title": "copy_to_glacier Lambda Output",
  "description": "The output for the copy_to_glacier Lambda.",
  "type": "object",
  "required": ["granules", "copied_to_glacier"],
  "properties": {
    "granules": {
      "description": "The 'granules' property from the input.",
      "type": "array",
      "items": {
        "required": ["granuleId", "files"],
        "properties": {
          "granuleId": {
            "description": "The granule's ID.",
            "type": "string"
          },
          "files": {
            "description": "The files to copy.",
            "type": "array",
            "items": {
              "required": ["fileName", "bucket", "key", "source"],
              "properties": {
                "fileName": {
                  "type": "string",
                  "description": "Name of file (e.g. file.txt)."
                },
                "bucket": {
                  "type": "string",
                  "description": "Name of the Bucket where file is archived in S3."
                },
                "key": {
                  "type": "string",
                  "description": "S3 Key for archived file."
                },
                "source": {
                  "type": "string",
                  "description": "Source URI of the file from origin system (e.g. S3, FTP, HTTP)."
                }
              }
            }
          }
        }
      }
    },
    "copied_to_glacier": {
      "description": "The 'filename' property of each successfully copied file.",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}